F77 = ifort
F90 = ifort
FLAGS_g95 = -O2 -r4
FLAGS_ifort = -assume byterecl -i8 -I/home/scjulia/progs/SHTOOLS2.3/SHTOOLS/modules -L/home/scjulia/progs/SHTOOLS2.3/SHTOOLS/lib -lSHTOOLS2.3 -lfftw3 -lm -latlas -O3 



ODIR = ../objects/
BDIR = ../bin/

